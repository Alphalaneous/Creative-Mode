{
	"geode": "4.2.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "alphalaneous.creative_mode",
	"name": "Creative Mode",
	"version": "v1.2.0",
	"developer": "Alphalaneous",
	"description": "Gives the Build Tab a Minecraft Creative Mode like interface",
	"dependencies": [
		{
            "id": "geode.node-ids",
            "version": ">=v1.13.2",
            "importance": "required"
        }
    ],
	"resources": {
		"sprites": [
			"resources/*.png"
		],
		"files": [
			"resources/objects.csv",
			"resources/shaders/*"
		]
	},
	"settings": {
		"enable-new-tab-ui": {
			"name": "New Tab UI",
            "description": "Revamps the bottom tab UI",
            "type": "bool",
            "default": true
		},
		"enable-tooltips": {
			"name": "Tooltips",
            "description": "Show tooltips in the bottom tab UI",
            "type": "bool",
            "default": true
		},
		"tooltip-scale": {
			"name": "Tooltip Scale",
            "description": "Scale the tooltip size",
            "type": "float",
            "default": 1,
			"min": 0.3,
            "max": 3,
            "control": {
                "slider": true
            }
		},
		"blur-strength": {
			"name": "Blur Strength",
            "description": "The strength of the blur (0 to disable)",
            "type": "int",
            "default": 10,
			"min": 0,
            "max": 20,
            "control": {
                "slider": true
            }
		},
		"line-color": {
            "name": "Line Color",
            "type": "rgb",
            "default": [255, 255, 255]
        },
		"gradient-top-color": {
            "name": "Gradient Top Color",
            "type": "rgba",
            "default": [127, 127, 127, 200]
        },
		"gradient-bottom-color": {
            "name": "Gradient Bottom Color",
            "type": "rgba",
            "default": [100, 100, 100, 127]
        },
		"gradient-overlay-opacity": {
            "name": "Gradient Overlay Opacity",
            "type": "float",
			"default": 0.55,
			"min": 0,
            "max": 1
        }
	},
	"links": {
        "homepage": "https://linktr.ee/Alphalaneous",
        "source": "https://github.com/Alphalaneous/Creative-Mode",
        "community": "https://discord.gg/Txn2CA5dHF"
    },
	"tags": [
		"editor"
	]
}
